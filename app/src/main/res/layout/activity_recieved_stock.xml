<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.GestionIntervention.RecievedStockActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"></View>

                    <TextView
                        android:id="@+id/tvPlanficiation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_top_notification"
                        android:padding="1dp"
                        android:text="Planification d'intervention"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="25dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/BlueIve"></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/caldroid_white"></View>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/caldroid_white"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/BlueCiel"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Num de serie :"
                        android:textSize="17dp"
                        android:background="@color/BlueCiel"
                        android:textColor="@color/caldroid_white"/>

                    <AutoCompleteTextView
                        android:id="@+id/tvRefRS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/caldroid_white"
                        android:textSize="16dp"
                        android:paddingBottom="8dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marque : "
                        android:textSize="17dp"
                        android:background="@color/BlueCiel"
                        android:textColor="@color/caldroid_white"/>

                    <AutoCompleteTextView
                        android:id="@+id/tvMarqueRS"                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/caldroid_white"
                        android:textSize="16dp"
                        android:paddingBottom="8dp"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Model :"
                        android:textSize="17dp"
                        android:background="@color/BlueCiel"
                        android:textColor="@color/caldroid_white"/>

                    <AutoCompleteTextView
                        android:id="@+id/tvModelRS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/caldroid_white"
                        android:textSize="16dp"
                        android:paddingBottom="8dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Type :"
                        android:textSize="17dp"
                        android:background="@color/BlueCiel"
                        android:textColor="@color/caldroid_white"/>

                    <AutoCompleteTextView
                        android:id="@+id/tvTypeRS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/caldroid_white"
                        android:textSize="16dp"
                        android:paddingBottom="8dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Couleur :"
                        android:textSize="17dp"
                        android:background="@color/BlueCiel"
                        android:textColor="@color/caldroid_white"/>

                    <AutoCompleteTextView
                        android:id="@+id/tvCouleurRS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/caldroid_white"
                        android:textSize="16dp"
                        android:paddingBottom="8dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Admin : "
                        android:textSize="17dp"
                        android:background="@color/BlueCiel"
                        android:textColor="@color/caldroid_white"/>


                    <AutoCompleteTextView
                        android:id="@+id/tvAdminRS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/caldroid_white"
                        android:textSize="16dp"
                        android:paddingBottom="8dp"
                        android:textAlignment="center"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"></View>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date envoie : "
                        android:textSize="17dp"
                        android:background="@color/BlueCiel"
                        android:textColor="@color/caldroid_white"
                        android:textAlignment="center"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <AutoCompleteTextView
                            android:id="@+id/tvDateEnvoieRS"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="textNoSuggestions"
                            android:textColor="@color/caldroid_white"
                            android:textSize="16dp"
                            android:paddingBottom="8dp"
                            android:textAlignment="center"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date reception :"
                        android:textSize="17dp"
                        android:background="@color/BlueCiel"
                        android:textColor="@color/caldroid_white"
                        android:textAlignment="center"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <AutoCompleteTextView
                            android:id="@+id/tvDateReceptionRS"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="textNoSuggestions"
                            android:textColor="@color/caldroid_white"
                            android:textSize="16dp"
                            android:paddingBottom="8dp"
                            android:textAlignment="center"
                            android:layout_alignParentTop="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/caldroid_white"></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/BlueIve"></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"></View>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_bottom_notification"
                        android:padding="1dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="25dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"></View>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
